<style>
    body {
        font-family: Arial, sans-serif;
        background-color: rgba(12, 12, 12, 0.874);
        color: white;
    }
    form {
        width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    input[type="text"],
    input[type="file"] {
        width: 100%;
        padding: 5px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    input[type="radio"] {
        margin-right: 5px;
    }

    input[type="submit"] {
        background-color: #007BFF;
        color: #fff;
        border: none;
        padding: 8px 20px;
        border-radius: 3px;
        cursor: pointer;
    }

    a {
        display: inline-block;
        margin-top: 10px;
        text-decoration: none;
        background-color: #007BFF;
        color: #fff;
        padding: 5px 10px;
        border-radius: 3px;
    }
</style>


<form action="/insertData" method="post" enctype="multipart/form-data">
    <table border="2">
        <tr>
            <td>Movie Posture</td>
            <td><input type="file" name="image"></td>
        </tr>
        <tr>
            <td>Movie Name</td>
            <td><input type="text" name="name"></td>
        </tr>
        <tr>
            <td>Movie Language</td>
            <td>
                <input type="radio" value="english" name="language">English
                <input type="radio" value="hindi" name="language">Hindi
                <input type="radio" value="gujarati" name="language">Gujarati
            </td>
        </tr>
        <tr>
            <td>Realese Year</td>
            <td><input type="text" name="year"></td>
        </tr>
        <tr>
            <td>Category</td>
            <td><input type="text" name="category"></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit"></td>
        </tr>
    </table>
</form>

<a href="/viewData">View</a>